---
import SectionTitle from './SectionTitle.astro';
import StyledSection from './StyledSection.astro';
import SocialLinks from './React/SocialLinks';
import Form from './React/Form';
---

<StyledSection>
  <SectionTitle id='social'>
    Follow me on my social media! Let's connect and stay in touch!
  </SectionTitle>
  <div class='grid gap-2 mt-10 w-full place-items-center mx-4 pb-10'>
    <SocialLinks client:load />
  </div>

  <p
    id='direct_message'
    class='bg-gradient-to-tr from-red-500 via-red-500 to-orange-500 bg-clip-text text-transparent w-full font-bold max-w-2xl text-center mt-4'
  >
    Also you can send me a direct message and get a cool toast!
  </p>

  <Form client:load />
</StyledSection>
